    <script>
        // Ê∏∏ÊàèÊ†∏ÂøÉÊû∂ÊûÑ - ËÆæËÆ°‰∏∫Êòì‰∫éÊâ©Â±ï
        class CatGame {
            constructor() {
                // Ê∏∏ÊàèÁä∂ÊÄÅ
                this.state = {
                    resources: {},
                    buildings: {},
                    technologies: {},
                    religions: {},
                    lastUpdate: Date.now(),
                    log: []
                };
                
                // ÈÖçÁΩÆ
                this.config = {
                    resources: [
                        { id: 'catnip', name: 'È£üÁâ©', icon: '', value: 10, rate: 0.1 },
                        { id: 'wood', name: 'Êú®Êùê', icon: '', value: 0, rate: 0 },
                        { id: 'minerals', name: 'ÁüøÁâ©', icon: '', value: 0, rate: 0 },
                        { id: 'gold', name: 'ÈªÑÈáë', icon: '', value: 0, rate: 0 },
                        { id: 'science', name: 'ÁßëÊäÄ', icon: '', value: 0, rate: 0 },
                        { id: 'faith', name: '‰ø°‰ª∞', icon: '', value: 0, rate: 0 }
                    ],
                    
                    buildings: [
                        { 
                            id: 'catnip_field', 
                            name: 'Áî∞', 
                            icon: '', 
                            description: 'Áîü‰∫ßÈ£üÁâ©ÁöÑÂü∫Á°ÄËÆæÊñΩ', 
                            cost: { catnip: 15 },
                            effect: { catnip: 0.1 },
                            count: 0
                        },
                        { 
                            id: 'lumber_mill', 
                            name: 'Êú®ÊùêÂéÇ', 
                            icon: '', 
                            description: 'Áîü‰∫ßÊú®ÊùêÁöÑËÆæÊñΩ', 
                            cost: { catnip: 50, wood: 10 },
                            effect: { wood: 0.2 },
                            count: 0,
                            requires: { tech: ['wood_processing'] }
                        },
                        { 
                            id: 'mine', 
                            name: 'Áüø‰∫ï', 
                            icon: '', 
                            description: 'ÂºÄÈááÁüøÁâ©ÁöÑËÆæÊñΩ', 
                            cost: { catnip: 100, wood: 30 },
                            effect: { minerals: 0.15 },
                            count: 0,
                            requires: { tech: ['mining'] }
                        },
                        { 
                            id: 'workshop', 
                            name: 'Â∑•Âùä', 
                            icon: '', 
                            description: 'Áîü‰∫ßÂêÑÁßçÁâ©ÂìÅ', 
                            cost: { wood: 100, minerals: 50 },
                            effect: { gold: 0.1 },
                            count: 0,
                            requires: { tech: ['crafting'] }
                        },
                        { 
                            id: 'lab', 
                            name: 'ÂÆûÈ™åÂÆ§', 
                            icon: '', 
                            description: 'Á†îÁ©∂', 
                            cost: { catnip: 500, minerals: 100 },
                            effect: { science: 0.05 },
                            count: 0,
                            requires: { tech: ['science'] }
                        },
                        { 
                            id: 'temple', 
                            name: 'Áå´Á•ûÊÆø', 
                            icon: '', 
                            description: 'Êî∂ÈõÜ‰ø°‰ª∞', 
                            cost: { wood: 300, gold: 100 },
                            effect: { faith: 0.03 },
                            count: 0,
                            requires: { religion: ['divine_cats'] }
                        }
                    ],
                    
                    technologies: [
                        {
                            id: 'wood_processing',
                            name: 'Êú®ÊùêÂä†Â∑•',
                            description: 'Ëß£ÈîÅÊú®ÊùêÂéÇÔºåÂÖÅËÆ∏Áîü‰∫ßÊú®Êùê',
                            cost: { science: 10 },
                            effect: { unlocks: ['lumber_mill'] },
                            researched: false
                        },
                        {
                            id: 'mining',
                            name: 'ÈááÁüøÊäÄÊúØ',
                            description: 'Ëß£ÈîÅÁüø‰∫ïÔºåÂÖÅËÆ∏ÂºÄÈááÁüøÁâ©',
                            cost: { science: 25 },
                            effect: { unlocks: ['mine'] },
                            researched: false
                        },
                        {
                            id: 'crafting',
                            name: 'ÊâãÂ∑•Ëâ∫',
                            description: 'Ëß£ÈîÅÂ∑•ÂùäÔºåÂÖÅËÆ∏Áîü‰∫ßÈªÑÈáë',
                            cost: { science: 50, wood: 50 },
                            effect: { unlocks: ['workshop'] },
                            researched: false
                        },
                        {
                            id: 'science',
                            name: 'ÁßëÂ≠¶ÊñπÊ≥ï',
                            description: 'Ëß£ÈîÅÁßëÂ≠¶ÂÆûÈ™åÂÆ§ÔºåÂÖÅËÆ∏Áîü‰∫ßÁßëÂ≠¶ÁÇπÊï∞',
                            cost: { science: 100 },
                            effect: { unlocks: ['lab'] },
                            researched: false
                        }
                    ],
                    
                    religions: [
                        {
                            id: 'divine_cats',
                            name: 'Á•ûÂú£Áå´Êïô',
                            description: 'Ëß£ÈîÅÁå´Á•ûÊÆøÔºåÂÖÅËÆ∏Êî∂ÈõÜ‰ø°‰ª∞ÁÇπÊï∞',
                            cost: { faith: 10 },
                            effect: { unlocks: ['temple'] },
                            unlocked: false
                        },
                        {
                            id: 'feline_blessing',
                            name: 'Áå´Á•ûÁ•ùÁ¶è',
                            description: 'ÊâÄÊúâËµÑÊ∫ê‰∫ßÈáèÊèêÈ´ò10%',
                            cost: { faith: 50 },
                            effect: { globalMultiplier: 1.1 },
                            unlocked: false
                        }
                    ]
                };
                
                // ÂàùÂßãÂåñÊ∏∏ÊàèÁä∂ÊÄÅ
                this.initializeGame();
                
                // ÂºÄÂßãÊ∏∏ÊàèÂæ™ÁéØ
                this.gameLoop();
                
                // ËÆæÁΩÆËá™Âä®‰øùÂ≠ò
                setInterval(() => this.saveGame(), 30000);
                
                // Âä†ËΩΩ‰øùÂ≠òÁöÑÊ∏∏Êàè
                this.loadGame();
                
                // ËÆæÁΩÆUI‰∫ã‰ª∂ÁõëÂê¨Âô®
                this.setupEventListeners();
            }
            
            initializeGame() {
                // ÂàùÂßãÂåñËµÑÊ∫ê
                this.config.resources.forEach(res => {
                    this.state.resources[res.id] = res.value;
                });
                
                // ÂàùÂßãÂåñÂª∫Á≠ë
                this.config.buildings.forEach(building => {
                    this.state.buildings[building.id] = building.count;
                });
                
                // ÂàùÂßãÂåñÁßëÊäÄ
                this.config.technologies.forEach(tech => {
                    this.state.technologies[tech.id] = tech.researched;
                });
                
                // ÂàùÂßãÂåñÂÆóÊïô
                this.config.religions.forEach(religion => {
                    this.state.religions[religion.id] = religion.unlocked;
                });
                
                // Ê∑ªÂä†ÂàùÂßãÊó•Âøó
                this.addLog("Ê∏∏ÊàèÂºÄÂßãÔºÅÂª∫ËÆæ‰Ω†ÁöÑÁå´‰πãÁéãÂõΩÂêßÔºÅ");
            }
            
            gameLoop() {
                const now = Date.now();
                const deltaTime = (now - this.state.lastUpdate) / 1000; // ËΩ¨Êç¢‰∏∫Áßí
                this.state.lastUpdate = now;
                
                // Êõ¥Êñ∞ËµÑÊ∫ê
                this.updateResources(deltaTime);
                
                // Êõ¥Êñ∞UI
                this.updateUI();
                
                // ÁªßÁª≠Âæ™ÁéØ
                requestAnimationFrame(() => this.gameLoop());
            }
            
            updateResources(deltaTime) {
                // ÈáçÁΩÆÊâÄÊúâËµÑÊ∫êÈÄüÁéá‰∏∫Âü∫Á°ÄÂÄº
                this.config.resources.forEach(res => {
                    this.state.resources[res.id] += res.rate * deltaTime;
                });
                
                // Â∫îÁî®Âª∫Á≠ëÊïàÊûú
                this.config.buildings.forEach(building => {
                    if (this.state.buildings[building.id] > 0) {
                        Object.entries(building.effect).forEach(([resId, value]) => {
                            this.state.resources[resId] += value * this.state.buildings[building.id] * deltaTime;
                        });
                    }
                });
                
                // Â∫îÁî®ÂÆóÊïôÊïàÊûú
                this.config.religions.forEach(religion => {
                    if (this.state.religions[religion.id]) {
                        if (religion.effect.globalMultiplier) {
                            this.config.resources.forEach(res => {
                                res.rate *= religion.effect.globalMultiplier;
                            });
                        }
                    }
                });
            }
            
            buyBuilding(buildingId) {
                const building = this.config.buildings.find(b => b.id === buildingId);
                
                // Ê£ÄÊü•ÊòØÂê¶Êª°Ë∂≥ÂâçÊèêÊù°‰ª∂
                if (building.requires) {
                    if (building.requires.tech) {
                        const hasTech = building.requires.tech.every(techId => 
                            this.state.technologies[techId]);
                        if (!hasTech) return;
                    }
                    
                    if (building.requires.religion) {
                        const hasReligion = building.requires.religion.every(religionId => 
                            this.state.religions[religionId]);
                        if (!hasReligion) return;
                    }
                }
                
                // Ê£ÄÊü•ÊòØÂê¶Ë∂≥Â§üËµÑÊ∫ê
                let canAfford = true;
                Object.entries(building.cost).forEach(([resId, cost]) => {
                    if (this.state.resources[resId] < cost * (this.state.buildings[buildingId] + 1)) {
                        canAfford = false;
                    }
                });
                
                if (canAfford) {
                    // Êâ£Èô§ËµÑÊ∫ê
                    Object.entries(building.cost).forEach(([resId, cost]) => {
                        this.state.resources[resId] -= cost * (this.state.buildings[buildingId] + 1);
                    });
                    
                    // Â¢ûÂä†Âª∫Á≠ëÊï∞Èáè
                    this.state.buildings[buildingId]++;
                    
                    // Ê∑ªÂä†Êó•Âøó
                    this.addLog(`Âª∫ÈÄ†‰∫Ü ${building.name}ÔºÅ`);
                }
            }
            
            researchTech(techId) {
                const tech = this.config.technologies.find(t => t.id === techId);
                
                // Ê£ÄÊü•ÊòØÂê¶Â∑≤Á†îÁ©∂
                if (this.state.technologies[techId]) return;
                
                // Ê£ÄÊü•ÊòØÂê¶Ë∂≥Â§üËµÑÊ∫ê
                let canAfford = true;
                Object.entries(tech.cost).forEach(([resId, cost]) => {
                    if (this.state.resources[resId] < cost) {
                        canAfford = false;
                    }
                });
                
                if (canAfford) {
                    // Êâ£Èô§ËµÑÊ∫ê
                    Object.entries(tech.cost).forEach(([resId, cost]) => {
                        this.state.resources[resId] -= cost;
                    });
                    
                    // Ëß£ÈîÅÁßëÊäÄ
                    this.state.technologies[techId] = true;
                    
                    // Ê∑ªÂä†Êó•Âøó
                    this.addLog(`Á†îÁ©∂‰∫Ü ${tech.name} ÁßëÊäÄÔºÅ`);
                }
            }
            
            unlockReligion(religionId) {
                const religion = this.config.religions.find(r => r.id === religionId);
                
                // Ê£ÄÊü•ÊòØÂê¶Â∑≤Ëß£ÈîÅ
                if (this.state.religions[religionId]) return;
                
                // Ê£ÄÊü•ÊòØÂê¶Ë∂≥Â§üËµÑÊ∫ê
                if (this.state.resources.faith < religion.cost.faith) return;
                
                // Êâ£Èô§ËµÑÊ∫ê
                this.state.resources.faith -= religion.cost.faith;
                
                // Ëß£ÈîÅÂÆóÊïô
                this.state.religions[religionId] = true;
                
                // Ê∑ªÂä†Êó•Âøó
                this.addLog(`Ëß£ÈîÅ‰∫Ü ${religion.name} Êïô‰πâÔºÅ`);
            }
            
            addLog(message) {
                const now = new Date();
                const timeString = `[${now.getHours().toString().padStart(2, '0')}:${now.getMinutes().toString().padStart(2, '0')}:${now.getSeconds().toString().padStart(2, '0')}]`;
                this.state.log.unshift({ time: timeString, message });
                
                // ÈôêÂà∂Êó•ÂøóÈïøÂ∫¶
                if (this.state.log.length > 50) {
                    this.state.log.pop();
                }
                
                // Êõ¥Êñ∞Êó•ÂøóUI
                this.updateLogUI();
            }
            
            saveGame() {
                const gameData = {
                    state: this.state,
                    timestamp: Date.now()
                };
                localStorage.setItem('catGameSave', JSON.stringify(gameData));
                this.addLog("Ê∏∏ÊàèÂ∑≤Ëá™Âä®‰øùÂ≠òÔºÅ");
            }
            
            loadGame() {
                const savedData = localStorage.getItem('catGameSave');
                if (savedData) {
                    try {
                        const gameData = JSON.parse(savedData);
                        this.state = gameData.state;
                        this.state.lastUpdate = Date.now(); // ÈáçÁΩÆÊõ¥Êñ∞Êó∂Èó¥
                        this.addLog("Ê∏∏ÊàèÂ∑≤Âä†ËΩΩÔºÅ");
                    } catch (e) {
                        console.error("Âä†ËΩΩÊ∏∏ÊàèÂ§±Ë¥•:", e);
                        this.addLog("Âä†ËΩΩÊ∏∏ÊàèÂ§±Ë¥•ÔºåÂºÄÂßãÊñ∞Ê∏∏Êàè");
                    }
                }
            }
            
            // UIÊõ¥Êñ∞ÊñπÊ≥ï
            updateUI() {
                this.updateResourcesUI();
                this.updateBuildingsUI();
                this.updateTechUI();
                this.updateReligionUI();
            }
            
            updateResourcesUI() {
                const container = document.getElementById('resources-container');
                container.innerHTML = '';
                
                this.config.resources.forEach(res => {
                    const resourceEl = document.createElement('div');
                    resourceEl.className = 'resource';
                    resourceEl.innerHTML = `
                        <div class="resource-icon">${res.icon}</div>
                        <div class="resource-info">
                            <div class="resource-name">${res.name}</div>
                            <div class="resource-value">${this.state.resources[res.id].toFixed(2)}</div>
                        </div>
                    `;
                    container.appendChild(resourceEl);
                });
            }
            
            updateBuildingsUI() {
                const container = document.getElementById('buildings-container');
                container.innerHTML = '';
                
                this.config.buildings.forEach(building => {
                    // Ê£ÄÊü•ÂâçÊèêÊù°‰ª∂ÊòØÂê¶Êª°Ë∂≥
                    let canShow = true;
                    if (building.requires) {
                        if (building.requires.tech) {
                            canShow = building.requires.tech.every(techId => 
                                this.state.technologies[techId]);
                        }
                        if (building.requires.religion) {
                            canShow = building.requires.religion.every(religionId => 
                                this.state.religions[religionId]);
                        }
                    }
                    
                    if (!canShow) return;
                    
                    const buildingEl = document.createElement('div');
                    buildingEl.className = 'building';
                    buildingEl.dataset.id = building.id;
                    
                    // ÊûÑÂª∫ÊàêÊú¨Â≠óÁ¨¶‰∏≤
                    let costHtml = '';
                    Object.entries(building.cost).forEach(([resId, cost]) => {
                        const res = this.config.resources.find(r => r.id === resId);
                        const totalCost = cost * (this.state.buildings[building.id] + 1);
                        costHtml += `
                            <div class="cost-item">
                                <span class="cost-icon">${res.icon}</span>
                                ${totalCost.toFixed(0)}
                            </div>
                        `;
                    });
                    
                    buildingEl.innerHTML = `
                        <div class="building-header">
                            <div class="building-icon">${building.icon}</div>
                            <div class="building-name">${building.name} (${this.state.buildings[building.id]})</div>
                        </div>
                        <div class="building-body">
                            <p>${building.description}</p>
                            <div class="building-cost">${costHtml}</div>
                            <button class="buy-btn" data-id="${building.id}">Âª∫ÈÄ†</button>
                        </div>
                    `;
                    
                    container.appendChild(buildingEl);
                });
                
                // Ê∑ªÂä†‰∫ã‰ª∂ÁõëÂê¨Âô®
                document.querySelectorAll('.buy-btn').forEach(btn => {
                    btn.addEventListener('click', (e) => {
                        this.buyBuilding(e.target.dataset.id);
                    });
                });
            }
            
            updateTechUI() {
                const container = document.getElementById('tech-tab');
                container.innerHTML = '';
                
                this.config.technologies.forEach(tech => {
                    // Â¶ÇÊûúÂ∑≤Á†îÁ©∂ÔºåÂàôË∑≥Ëøá
                    if (this.state.technologies[tech.id]) return;
                    
                    const techEl = document.createElement('div');
                    techEl.className = 'tech-item';
                    techEl.dataset.id = tech.id;
                    
                    // ÊûÑÂª∫ÊàêÊú¨Â≠óÁ¨¶‰∏≤
                    let costHtml = '';
                    Object.entries(tech.cost).forEach(([resId, cost]) => {
                        const res = this.config.resources.find(r => r.id === resId);
                        costHtml += `
                            <div class="cost-item">
                                <span class="cost-icon">${res.icon}</span>
                                ${cost}
                            </div>
                        `;
                    });
                    
                    techEl.innerHTML = `
                        <div class="tech-name">${tech.name}</div>
                        <div class="tech-desc">${tech.description}</div>
                        <div class="building-cost">${costHtml}</div>
                        <button class="upgrade-btn" data-id="${tech.id}">Á†îÁ©∂</button>
                    `;
                    
                    container.appendChild(techEl);
                });
                
                // Ê∑ªÂä†‰∫ã‰ª∂ÁõëÂê¨Âô®
                document.querySelectorAll('#tech-tab .upgrade-btn').forEach(btn => {
                    btn.addEventListener('click', (e) => {
                        this.researchTech(e.target.dataset.id);
                    });
                });
            }
            
            updateReligionUI() {
                const container = document.getElementById('religion-tab');
                container.innerHTML = '';
                
                this.config.religions.forEach(religion => {
                    // Â¶ÇÊûúÂ∑≤Ëß£ÈîÅÔºåÂàôË∑≥Ëøá
                    if (this.state.religions[religion.id]) return;
                    
                    const religionEl = document.createElement('div');
                    religionEl.className = 'religion-item';
                    religionEl.dataset.id = religion.id;
                    
                    religionEl.innerHTML = `
                        <div class="religion-name">${religion.name}</div>
                        <div class="religion-desc">${religion.description}</div>
                        <div class="building-cost">
                            <div class="cost-item">
                                <span class="cost-icon">üôè</span>
                                ${religion.cost.faith}
                            </div>
                        </div>
                        <button class="upgrade-btn" data-id="${religion.id}">Ëß£ÈîÅ</button>
                    `;
                    
                    container.appendChild(religionEl);
                });
                
                // Ê∑ªÂä†‰∫ã‰ª∂ÁõëÂê¨Âô®
                document.querySelectorAll('#religion-tab .upgrade-btn').forEach(btn => {
                    btn.addEventListener('click', (e) => {
                        this.unlockReligion(e.target.dataset.id);
                    });
                });
            }
            
            updateLogUI() {
                const container = document.getElementById('log-container');
                container.innerHTML = '';
                
                this.state.log.forEach(entry => {
                    const logEl = document.createElement('div');
                    logEl.className = 'log-entry';
                    logEl.innerHTML = `<span class="log-time">${entry.time}</span> ${entry.message}`;
                    container.appendChild(logEl);
                });
            }
            
            setupEventListeners() {
                // Ê†áÁ≠æÂàáÊç¢
                document.querySelectorAll('.tab-btn').forEach(btn => {
                    btn.addEventListener('click', () => {
                        // ÁßªÈô§ÊâÄÊúâactiveÁ±ª
                        document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
                        document.querySelectorAll('.tab-pane').forEach(p => p.classList.remove('active'));
                        
                        // Ê∑ªÂä†activeÁ±ªÂà∞ÂΩìÂâç
                        btn.classList.add('active');
                        document.getElementById(`${btn.dataset.tab}-tab`).classList.add('active');
                    });
                });
                
                // ‰øùÂ≠ò/Âä†ËΩΩÊåâÈíÆ
                document.getElementById('save-btn').addEventListener('click', () => {
                    this.saveGame();
                    this.addLog("Ê∏∏ÊàèÂ∑≤ÊâãÂä®‰øùÂ≠òÔºÅ");
                });
                
                document.getElementById('load-btn').addEventListener('click', () => {
                    this.loadGame();
                });
            }
        }

        // ÂêØÂä®Ê∏∏Êàè
        document.addEventListener('DOMContentLoaded', () => {
            const game = new CatGame();
            
            // Êö¥Èú≤Ê∏∏ÊàèÂØπË±°‰ª•‰æøË∞ÉËØï
            window.game = game;
        });
    </script>
</body>
</html>
